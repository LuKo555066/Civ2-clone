{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "windows": { 
                "args": [
                "build",
                "${workspaceFolder}/EtoFormsUI/EtoFormsUI.WinForms/EtoFormsUI.WinForms.csproj"
                ],
            },
            "linux": { 
                "args": [
                "build",
                "${workspaceFolder}/EtoFormsUI/EtoFormsUI.Gtk/EtoFormsUI.Gtk.csproj"
                ],
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
            },
            "problemMatcher": "$msCompile"
        }
    ]
}